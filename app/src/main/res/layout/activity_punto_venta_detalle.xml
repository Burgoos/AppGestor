<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".PuntoVentaDetalleActivity">

    <TextView
        android:id="@+id/txtNombrePV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Metro Alfonso Ugarte" />

    <TextView
        android:id="@+id/txtDireccionPV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        tools:text="AV. ALFONSO UGARTE 740" />

    <ImageView
        android:id="@+id/imgCamara"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        app:srcCompat="@drawable/foto" />

    <Button
        android:id="@+id/btnVisitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_login"
        android:text="Visitar"
        android:textSize="18sp" />
</LinearLayout>